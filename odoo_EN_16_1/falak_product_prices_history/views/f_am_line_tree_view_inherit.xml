<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="f_view_am_order_form_ph_inherit_view" model="ir.ui.view">
		<field name="name">f.view.am.order.form.ph.inherit.view</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
			
			<xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="before">

				<field name="f_invoice_history" invisible="1" />
				<field name="f_credit_note_history" invisible="1" />
				<button name="f_open_price_history"
					string=" " type="object" icon="fa-history" context="{'partner_id':partner_id}"
					attrs="{'invisible':['|','|',('parent.state','=','posted'),('parent.move_type','!=','out_invoice'),('f_invoice_history','=',False)]}"/>
					
				<button name="f_open_price_history"
					string=" " type="object" icon="fa-history" context="{'partner_id':partner_id}"
					attrs="{'invisible':['|','|',('parent.state','=','posted'),('parent.move_type','!=','out_refund'),('f_credit_note_history','=',False)]}"/>

			</xpath>
			
		</field>
	</record>

</odoo>
