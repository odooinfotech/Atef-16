
<odoo>
	<record id="f_sale_order_line_inherit" model="ir.ui.view">
		<field name="name">f.sale.order</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_term_id']" position="after">

				<field name="f_can_edit_price" invisible="1" />
					<field name="f_can_readonly_price" invisible="1" />
						<field name="f_enable_restrict" invisible="1" />

			</xpath>
			<!--  <xpath expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/field[@name='date_order']" position="attributes">

				<attribute name="attrs">{'readonly':['&amp;',('f_can_edit_price','!=',True),('f_enable_restrict','=',True)]}
				</attribute>
			</xpath> -->
			
			 <xpath expr="//field[@name='pricelist_id']" position="attributes">
   <attribute name="attrs">{'readonly':['&amp;',('f_can_edit_price','!=',True),('f_enable_restrict','=',True)]}
				</attribute>
  </xpath>
  
  
  
		



			<xpath
				expr="//sheet//notebook//page//field//tree//field[@name='price_unit']"
				position="after">
				<!-- <field name="f_price_unit" readonly="1"
					groups="price_access_management.f_readonly_sales_prices" /> -->
				<field name="f_can_edit_price" invisible="1" />
				<field name="f_can_readonly_price" invisible="1" />
					<field name="f_enable_restrict" invisible="1" />
			</xpath>


			<xpath
				expr="//sheet//notebook//page//field//tree//field[@name='price_unit']"
				position="attributes">
				<!-- <attribute name="groups">price_access_management.f_can_edit_sales
				</attribute> -->
				<attribute name="attrs">{'readonly':['&amp;','|',('f_enable_restrict','=',True),('f_can_readonly_price','=',True),('f_can_edit_price','=',False)]}
				</attribute>
			</xpath>

			<xpath
				expr="//sheet//notebook//page//field//form//field[@name='price_unit']"
				position="after">
			<!-- 	<field name="f_price_unit" readonly="1"
					groups="price_access_management.f_readonly_sales_prices" /> -->
				<field name="f_can_edit_price" invisible="1" />
					<field name="f_can_readonly_price" invisible="1" />
					<field name="f_enable_restrict" invisible="1" />
			</xpath>


			<xpath
				expr="//sheet//notebook//page//field//form//field[@name='price_unit']"
				position="attributes">
			<!-- 	<attribute name="groups">price_access_management.f_can_edit_sales
				</attribute> -->
					<attribute name="attrs">{'readonly':['&amp;','|',('f_enable_restrict','=',True),('f_can_readonly_price','=',True),('f_can_edit_price','=',False)]}
				</attribute>
			</xpath>


		</field>
	</record>
</odoo>

