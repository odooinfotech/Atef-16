<odoo>

	<record id="f_bom_inherit_tree" model="ir.ui.view">
		<field name="name">f.bom.form.vew.inherit.tree</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
		<field name="arch" type="xml">

			<xpath expr="//tree//field[@name='type']"
				position="after">

				<field name="f_default_bom" optional="hide" />

			</xpath>
		</field>
	</record>


	<record id="f_bom_inherit_form" model="ir.ui.view">
		<field name="name">f.bom.form.vew.inherit</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp.mrp_bom_form_view" />
		<field name="arch" type="xml">

			<xpath
				expr="//form//sheet//group//group//field[@name='type']"
				position="after">

				<field name="f_default_bom" />

			</xpath>
		</field>
	</record>
</odoo>
