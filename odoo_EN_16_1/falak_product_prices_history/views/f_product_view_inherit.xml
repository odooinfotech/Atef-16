<odoo>


    <record id="f_product_list_inherit_view" model="ir.ui.view">
        <field name="name">f.product.list.price.history</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='virtual_available']"
                   position="after">
                <field name="f_product_history" invisible="1" />
                <field name="f_product_purchase_history" invisible="1" />
                <button name="f_open_price_history"
                        string=" " type="object" icon="fa-history"
                        attrs="{'invisible':[('f_product_history','=',False)]}"/>

            </xpath>
        </field>
    </record>

    <record id="f_product_form_inherit_view" model="ir.ui.view">
        <field name="name">f.product.form.price.history</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
            	<field name="f_product_history" invisible="1" />
                <field name="f_product_purchase_history" invisible="1" />
                <button name="f_open_price_history"
                        string="Sale Price History" type="object" icon="fa-history"
                        attrs="{'invisible':[('f_product_history','=',False)]}"
                       />
                <button name="f_open_purchase_price_history"
                        string="Purchase Price History" type="object" icon="fa-history"
                        attrs="{'invisible':[('f_product_purchase_history','=',False)]}"
                        groups="hide_product_cost.f_cost_group_id"/>
            </xpath>
        </field>
    </record>
    <record id="f_product_tmp_form_inherit_view" model="ir.ui.view">
        <field name="name">f.product.tmp.form.price.history</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
            	<field name="f_product_history" invisible="1" />
                <field name="f_product_purchase_history" invisible="1" />
                <button name="f_open_price_history"
                        string="Sale Price History" type="object" icon="fa-history"
                        attrs="{'invisible':[('f_product_history','=',False)]}"
                       />
                <button name="f_open_purchase_price_history"
                        string="Purchase Price History" type="object" icon="fa-history"
                        attrs="{'invisible':[('f_product_purchase_history','=',False)]}"
                        groups="hide_product_cost.f_cost_group_id"/>
            </xpath>
        </field>
    </record>


</odoo>