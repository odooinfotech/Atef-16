<odoo>


	<record id="f_product_template_search_customs" model="ir.ui.view">
		<field name="name">f.product.template.search.prod.customs</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="stock.product_template_search_form_view_stock" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='categ_id']" position="after">

				<field name="f_mrp_categ" filter_domain="[('f_mrp_categ','ilike',self)]" />
				<field name="f_mrp_wcg" filter_domain="[('f_mrp_wcg','ilike',self)]" />


			</xpath>
		</field>
	</record>

	<record id="f_product_template_inherit" model="ir.ui.view">
		<field name="name">f.product.template.form.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='barcode']" position="after">

				<field name="f_mrp_categ" />
				<field name="f_mrp_wcg" />


			</xpath>
		</field>
	</record>


	<record id="f_product_product_inherit" model="ir.ui.view">
		<field name="name">f.product.product.form.inherit</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_normal_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='barcode']" position="after">

				<field name="f_mrp_categ" />
				<field name="f_mrp_wcg" />


			</xpath>
		</field>
	</record>

	<!-- Add fields in products tree -->
	<record id="f_product_screen_tree_view" model="ir.ui.view">
		<field name="name">f.product.screen.tree.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='default_code']" position="before">
				<field name="f_mrp_categ" optional="hide" />
				<field name="f_mrp_wcg" optional="hide" />
			</xpath>
		</field>
	</record>
</odoo>
