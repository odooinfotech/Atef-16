<odoo>
    <data>
        <record id="f_res_config_settings_view_form_stat"
                model="ir.ui.view">
            <field name="name">f.res.config.settings.view.form.inherit.stat
            </field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id"
                   ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']" position="inside">

                    <h2>Statement Report</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="f_show_bounce_checks_stat"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="f_show_bounce_checks_stat"/>
                                <div class="text-muted">
                                   Bounce Checks on Statement Report
                                </div>
                            </div>
                        </div>

                    </div>


                </xpath>
            </field>
        </record>
    </data>
</odoo>
