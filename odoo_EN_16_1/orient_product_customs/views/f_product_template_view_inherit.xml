<odoo>

	<record id="f_product_template_form_or_prod_cust"
		model="ir.ui.view">
		<field name="name">f.product.template.form.or.prod.cust
		</field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_only_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='general_information']"
				position="before">
				<page name="details" string="Details">
					<group>
						<group>
							<field name="fprodbrand" />
							<field name="fprodcategory" />
							<field name="fprodsubcategory" />
							<field name="fprodtarget" widget="many2many_tags_avatar" />
						</group>
						<group>
							<field name="fprodfamily" />
							<field name="fprodidentity" />
							<field name="fproducername" />
							<field name="fexternalid" />
						</group>
					</group>
				</page>
			</xpath>
		</field>
	</record>

	<!-- add barcode in kanban view -->
	<record id="f_product_template_form" model="ir.ui.view">
		<field name="name">f.product.template.form</field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_kanban_view" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='product_lst_price']" position="after">

				<div name="product_barcode" class="mt-1">
					Barcode :
					<field name="barcode" />
				</div>
			</xpath>
		</field>
	</record>
	<record id="f_product_temp_search_inherit_or_customs"
		model="ir.ui.view">
		<field name="name">f.contract.template.search</field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_search_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='name']" position="after">
				<field name="fprodbrand"
					domain="[('fprodbrand_name', '=', self)]" />
				<field name="fprodfamily"
					domain="[('fprodfamily_name', '=', self)]" />
				<field name="fprodcategory"
					domain="[('fprodcategory_name', '=', self)]" />
				<field name="fprodsubcategory"
					domain="[('fprodsubcategory_name', '=', self)]" />
				<field name="fproducername"
					domain="[('fprodproducer_name', '=', self)]" />
				<field name="fprodtarget"
					domain="[('fprodtarget_name', '=', self)]" />

				<field name="barcode" filter_domain="[('barcode', '=', self)]" />

				<field name="fexternalid"
					filter_domain="[('fexternalid', 'ilike', self)]" />
			</xpath>
		</field>
	</record>

	<!-- add search pannel -->
	<record id="search_panel_product_template_search_view"
		model="ir.ui.view">
		<field name="name"> product.template.search.inherit.searchpanel </field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_search_view" />
		<field name="arch" type="xml">
			<xpath expr="//search" position="inside">
				<searchpanel>
					<field name="fproducername" icon="fa-th-list" string="Products Producer" enable_counters="1" />
					<field name="fprodfamily" icon="fa-th-list" string="Products Family" enable_counters="1" />

				</searchpanel>


			</xpath>
		</field>
	</record>
	
<!-- 	default order based on internal reference -->
		<record id="f_product_template_tree" model="ir.ui.view">
		<field name="name">f.product.template.tree</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view" />
		<field name="arch" type="xml">
			<xpath expr="//tree" position="attributes">
				<attribute name="default_order">default_code asc</attribute>
			</xpath>
		</field>
	</record>
</odoo>




                
