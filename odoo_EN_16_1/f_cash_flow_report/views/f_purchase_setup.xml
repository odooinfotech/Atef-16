<odoo>
    <data>


        <record id="f_paypotyped_screen_form_view" model="ir.ui.view">
            <field name="name">f.POetupt.wizard.form.view</field>
            <field name="model">f.po.payment.forcaste.types</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>


                    <field name="name"/>


                </tree>
            </field>
        </record>

        <record id="f_maction_wizard_typepayment" model="ir.actions.act_window">
            <field name="name">PO Forecasted Payment Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">f.po.payment.forcaste.types</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <menuitem action="f_maction_wizard_typepayment" id="f_typepaymentmenuforecastsposetuptypes"
                  name="Purchase Payment Forecasted Type Setup" parent="purchase.menu_purchase_config"
                  groups="f_cash_flow_report.f_so_po_setup_access_group_id" sequence='400'/>


        <record id="f_poforapayform_view_id" model="ir.ui.view">
            <field name="name">f_po_forcar_pay_type</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id"
                   ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                    <page name="pay_forca" string="Forcaste Payment"
                          groups="f_cash_flow_report.f_so_po_setup_access_group_id">
                        <form>
                            <group>
                                <field name="f_forcasted_ids">
                                    <tree editable='bottom'>
                                        <field name="f_name"
                                               options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open': True}"/>
                                        <field name="amount"/>
                                        <field name="currency_id"/>
                                        <field name="date"/>

                                        <field name="currency_rate" invisible="1"/>

                                    </tree>

                                </field>


                            </group>
                        </form>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="f_posetuptypes_wizard_screen_form_view" model="ir.ui.view">
            <field name="name">f.POetuptypes.wizard.form.view</field>
            <field name="model">f.po.forcaste.types</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>


                    <field name="name"/>


                </tree>
            </field>
        </record>

        <record id="f_maction_wizard_forecastsposetuptypes" model="ir.actions.act_window">
            <field name="name">PO Forecasted Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">f.po.forcaste.types</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <menuitem action="f_maction_wizard_forecastsposetuptypes" id="f_menuforecastsposetuptypes"
                  name="Purchase Forecasted Types Setup" parent="purchase.menu_purchase_config"
                  groups="f_cash_flow_report.f_so_po_setup_access_group_id" sequence='400'/>


        <record id="f_posetup_wizard_screen_form_view" model="ir.ui.view">
            <field name="name">f.posetup.wizard.form.view</field>
            <field name="model">f.po.setup.amount</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>

                    <field name="type_id" options="{'no_create': True,'no_create_edit': True,'no_open': True }"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="label"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id"/>

                    <field name="currency_rate" invisible="1"/>


                </tree>
            </field>
        </record>

        <record id="f_maction_wizard_forecastposetup" model="ir.actions.act_window">
            <field name="name">Purchase Forecasted Setup</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">f.po.setup.amount</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <menuitem action="f_maction_wizard_forecastposetup" id="f_menuforecastspsetup"
                  name="Purchase Forecasted Setup" parent="purchase.menu_purchase_config"
                  groups="f_cash_flow_report.f_so_po_setup_access_group_id" sequence='400'/>


    </data>
</odoo>
