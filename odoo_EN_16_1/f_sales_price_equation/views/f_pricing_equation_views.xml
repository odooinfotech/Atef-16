<odoo>
	<data>
		<record id="f_pricing_equation_tree_view" model="ir.ui.view">
			<field name="name">f.pricing.equation.tree.view</field>
			<field name="model">f.pricing.equation</field>
			<field name="arch" type="xml">
				<tree string="Pricing Equation" editable="bottom">
					<field name="f_name" />
                    <field name="f_factor" />
				</tree>
			</field>
		</record>

        <record model="ir.actions.act_window" id="f_pricing_equation_action">
			<field name="name">Pricing Equation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">f.pricing.equation</field>
			<field name="view_mode">tree</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					No Equation found. Let's create one!
				</p>
			</field>
		</record>

		<menuitem name="Pricing Equations" id="f_pricing_equations_menu"
				  parent="stock.menu_stock_config_settings"
				  action="f_sales_price_equation.f_pricing_equation_action" />

	</data>
</odoo>