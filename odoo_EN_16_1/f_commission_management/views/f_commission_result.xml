<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="f_commission_result_tree_view" model="ir.ui.view">
        <field name="name">f.commission.result.tree.view</field>
        <field name="model">f.commission.result</field>
        <field name="arch" type="xml">
            <tree string="Commission Result">
                <field name="f_commission_role_id" />
                <field name="f_role_responsible_id" />
                <field name="f_commission_setup_id" />
                <field name="f_commission_calculation_id" />
                <field name="f_commission_target" />
                <field name="f_commission_percent" />
                <field name="f_commission_amount" />
                <field name="f_total_amount" />
            </tree>
        </field>
    </record>

    <record id="f_commission_result_form_view" model="ir.ui.view">
        <field name="name">f.commission.result.form.view</field>
        <field name="model">f.commission.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="f_commission_role_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="f_role_responsible_id" />
                            <field name="f_commission_setup_id" />
                            <field name="f_commission_calculation_id" />
                        </group>
                        <group>
                            <field name="f_commission_target" />
                            <field name="f_commission_percent" />
                            <field name="f_commission_amount" />
                            <field name="f_total_amount" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="f_commission_result_action" model="ir.actions.act_window">
        <field name="name">Commission Result</field>
        <field name="res_model">f.commission.result</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Commission Result"
              id="f_commission_result_menu"
              parent="f_commission_management.f_commission_management_main_menu"
              action="f_commission_management.f_commission_result_action"
              sequence="4"
              groups="f_commission_management.f_commission_manage"/>

</odoo>