<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="f_collection_type_tree_view" model="ir.ui.view">
        <field name="name">f.collection.type.tree.view</field>
        <field name="model">f.collection.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="f_name" />
                <field name="f_payment_type" />
            </tree>
        </field>
    </record>

    <record id="f_collection_type_form_view" model="ir.ui.view">
        <field name="name">f.collection.type.form.view</field>
        <field name="model">f.collection.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="f_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="f_payment_type" />
                            <field name="f_journals" widget="many2many_tags" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                            <field name="f_destination_account" widget="many2many_tags" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                            <field name="f_include_returned_checks" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                        </group>
                        <group>
                            <field name="f_check_to_cash_limit_from" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                            <field name="f_check_to_cash_limit_to" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                            <field name="f_check_exclude_from" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                            <field name="f_check_exclude_to" attrs="{'invisible':[('f_payment_type','=','all')]}" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="f_collection_type_action" model="ir.actions.act_window">
        <field name="name">Collection Type</field>
        <field name="res_model">f.collection.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Collection Type"
              id="f_collection_type_menu"
              parent="f_commission_management.f_commission_config_menu"
              action="f_commission_management.f_collection_type_action"
              sequence="1" />
</odoo>