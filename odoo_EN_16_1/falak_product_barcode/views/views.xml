        <record id="f_barcode_manual_form" model="ir.ui.view">
            <field name="name">f.barcode.manual.form</field>
            <field name="model">f.barcode.manual</field>
            <field name="arch" type="xml">
                <form string="Generate Barcode">
                    <group>
                    </group>
                    <footer>
                        <button name="f_generate_manual_barcode" type="object" string="Generate Barcode"
                                class="oe_highlight"/>
                        or
                        <button special="cancel" string="Close" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
     
        <record id="f_action_maual_genearte" model="ir.actions.act_window">
            <field name="name">Generate Barcode</field>
            <field name="res_model">f.barcode.manual</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="f_inherit_barcode_view_product_form">
            <field name="name">f.inherit.barcode.view.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
				<field name="barcode" position="after">
<!-- 				     <field name="f_barcode_general_setting" invisible="1"/> -->
					<button name="%(f_action_maual_genearte)d" type="action" string="Manually Generate Barcode" 
                                        class="oe_link" attrs="{'invisible': [('barcode', '!=', False)]}"/><br/>
                                       
				</field>


			</field>
			</record>

        <record id="f_auto_generate_product_barcode" model="ir.ui.view">
            <field name="name">f.auto.generate.product.barcode</field>
            <field name="model">f.barcode.auto</field>
            <field name="arch" type="xml">
                <form>
                    <group>
		                    </group>
                    <footer>
                        <button name="f_generate_auto_barcode" type="object" string="Generate Barcode" class="oe_highlight" />
                        or
                        <button special="cancel" string="Close" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
