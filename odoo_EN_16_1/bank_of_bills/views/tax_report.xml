<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>




	 <record id="view_tax_report_tree" model="ir.ui.view">
            <field name="name">tax.report.tree</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree  create="false"  string="Bank Of Bills"  >
					 <field name = "f_tax_id_partner"/>
					<field name = "f_accounting_date"  /> 
<!-- 					<field name="invoice_date" string="Bill Date"/> 
 -->					<field name = "move_type"/>
					 <field name = "f_mobile_partner"/>
					  <field name="partner_id"  string="Vendor" />
					 <field name="name" />
                	<field name="f_bill_date_dd" />
                	<field name="f_bill_date_mm" />
                	<field name="f_bill_date_yy" />
                	  <field name="amount_untaxed_signed" string="Tax Excluded" sum="Total" optional="show" widget='monetary' />
                    <field name="amount_tax_signed" string="Tax" sum="Total" optional="show" widget='monetary'/>
                    <field name="amount_total_signed" string="Total" sum="Total" optional="show" widget='monetary'/>
                	 <field name = "currency_id"/>
                	<field name="ref" />
                    <field name="state" optional="show" invisible="1"/>
                </tree>
            </field>
        </record>




	 <record id="action_tax_report" model="ir.actions.act_window">
            <field name="name">Bank Of Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('move_type','in',['in_invoice','in_refund','in_receipt']),('state' , '=' , 'posted')]</field>
            <field name="view_id" ref="view_tax_report_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Record a new vendor bill
              </p>
            </field>
        </record>

	<menuitem action="action_tax_report" id="menu_action_tax_report" parent="account.menu_finance_payables" sequence="30"/>
	
</data>

</odoo>
