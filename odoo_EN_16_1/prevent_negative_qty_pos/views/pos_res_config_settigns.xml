<?xml version="1.0"?>
<odoo>
    <record id="f_customedeny_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.locviewdenyqty.f.customs</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">


           <div id="pos_interface_section" position="after">
            <h2 class="mt16" >Custom Neg Qty Config</h2>
              <div class="row mt16 o_settings_container" id="f_negqty_customs_section" >


              <div class="col-12 col-lg-6 o_setting_box"
                         id="f_negqty_shop_custom"
                       >
                        <div class="o_setting_right_pane">
                            <field name="pos_deny_order"/>
                        </div>
                        <div class="o_setting_left_pane">
                            <label for="pos_deny_order" string="Deny Order When Out of Stock"/>

                        </div>
                    </div>



				   <div class="col-12 col-lg-6 o_setting_box"
                         id="f_negqtyres_shop_custom"
                       >
                        <div class="o_setting_right_pane">
                            <field name="f_include_rese_pos"/>
                        </div>
                        <div class="o_setting_left_pane">
                            <label for="f_include_rese_pos" string="Deny Order When Out of Stock/Include Reserved"/>

                        </div>
                    </div>








              </div>

           </div>











        </field>
        </record>


        </odoo>