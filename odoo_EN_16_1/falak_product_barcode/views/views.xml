<odoo>

<record model="ir.sequence" id="seq_expense">
        <field name="name">Customize Barcode sequence</field>
        <field name="code">f.barcode.seq</field>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field eval="False" name="use_date_range"/>
        <field eval="False" name="company_id"/>
        <field name="padding">12</field>
    </record>
        
        
