<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="f_action_package_label_barcode" model="ir.actions.report">
            <field name="name">Print Package Barcode</field>
            <field name="model">stock.quant.package</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">f_packages_management.f_package_label_custom_template</field>
            <field name="report_file">f_packages_management.f_package_label_custom_template</field>
            <field name="print_report_name"> 'Packages Labels' </field>
            <field name="binding_type">report</field>
        </record>

        <record id="f_paperformat_package_barcode" model="report.paperformat">
            <field name="name">Falak Packages Barcode Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">60</field>
            <field name="page_width">40</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(6,0,[
                                                  ref('f_packages_management.f_action_package_label_barcode'),
                                                ])]"/>
        </record>
    </data>
</odoo>
