<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    
     
        
        

   <record id="f_profit_access_group_id" model="res.groups">
			<field name="name">Periodic Product Profit</field>
			<field name="category_id" ref="f_access_categ.f_acct_reports"/>
			
	</record>
	
	
    

        <record id="wizard_xls_profit_form_view" model="ir.ui.view">
            <field name="name">f.product.profit.xls.form.view</field>
            <field name="model">f.product.profitability</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date"/>
                         
                        </group>
                        <group>
                            <field name="to_date"/>
                         
                        </group>
                        
                        </group>
                     
                    
                
                    
                 
                    <footer>
                    	<button name="get_profit_details" type="object" string="Run Profitability" class="oe_highlight"/>
                    
                        
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_profitability" model="ir.actions.act_window">
            <field name="name">Periodic Product Profit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">f.product.profitability</field>
<!--             <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_profitability" id="menuvprofit_wizard"
                  name="Periodic Product Profit" parent="account.menu_finance_reports" groups="falak_profit_report.f_profit_access_group_id" sequence='400'/>
             
             
             
          

    </data>
</odoo>
