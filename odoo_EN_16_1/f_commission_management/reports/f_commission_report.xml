<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="f_commission_report_tree_view" model="ir.ui.view">
        <field name="name">f.commission.report.tree.view</field>
        <field name="model">f.commission.report</field>
        <field name="arch" type="xml">
            <tree string="Commission Report">
                <field name="f_commission_setup_id" />
                <field name="f_commission_period" optional="hide"/>
                <field name="f_commission_role" optional="hide"/>
                <field name="f_commission_type" optional="show"/>
                <field name="f_commission_value_type" optional="show"/>
                <field name="f_commission_value" optional="show"/>
                <field name="f_commission_target" optional="show"/>
                <field name="f_total_amount" />
                <field name="f_commission_amount" />
            </tree>
        </field>
    </record>

    <record id="f_commission_report_pivot_view" model="ir.ui.view">
        <field name="name">f.commission.report.pivot.view</field>
        <field name="model">f.commission.report</field>
        <field name="arch" type="xml">
            <pivot string="Commission Report">
                <field name="f_commission_role" type="row"/>
                <field name="f_commission_period" type="col"/>
                <field name="f_total_amount" type="measure"/>
                <field name="f_commission_value" type="measure"/>
                <field name="f_commission_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="f_commission_report_search_view" model="ir.ui.view">
        <field name="name">f.commission.report.search.view</field>
        <field name="model">f.commission.report</field>
        <field name="arch" type="xml">
            <search string="Commission Report" >
                <group expand="0" string="Group By">
                    <filter string="Commission Setup" name="f_commission_setup_id" domain="[]" context="{'group_by': 'f_commission_setup_id'}"/>
                    <filter string="Period" name="f_commission_period" domain="[]" context="{'group_by': 'f_commission_period'}"/>
                    <filter string="Commission Role" name="f_commission_role" domain="[]" context="{'group_by': 'f_commission_role'}"/>
                    <filter string="Commission Type" name="f_commission_type" domain="[]" context="{'group_by': 'f_commission_type'}"/>
                    <filter string="Target" name="f_commission_target" domain="[]" context="{'group_by': 'f_commission_target'}"/>
                    <filter string="Commission Value" name="f_commission_value" domain="[]" context="{'group_by': 'f_commission_value'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="f_commission_report_kanban_view" model="ir.ui.view">
        <field name="name">f.commission.report.kanban.view</field>
        <field name="model">f.commission.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="f_commission_setup_id" />
                <field name="f_commission_period" />
                <field name="f_commission_role" />
                <field name="f_commission_type" />
                <field name="f_commission_value_type" />
                <field name="f_commission_value" />
                <field name="f_commission_target" />
                <field name="f_notes" />
                <field name="f_total_amount" />
                <field name="f_commission_amount" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record ">
                            <div class="o_kanban_card">
                                <!-- Title Section -->
                                <div class="o_kanban_title">
                                    <h4 class="o_kanban_record_title">
                                        <field name="f_commission_role" class="o_text_overflow"/>
                                    </h4>
                                    <h4 class="o_kanban_record_title">
                                        <field name="f_commission_setup_id" class="o_text_overflow"/>
                                    </h4>
                                    <h4 class="o_kanban_record_title">
                                        <field name="f_commission_period" class="o_text_overflow"/>
                                    </h4>
                                </div>

                                <!-- Body Section -->
                                <div class="o_kanban_body">
                                    <div class="o_kanban_body_row">
                                        <strong><t>Commission Type:</t></strong> <field name="f_commission_type"/>
                                    </div>
                                    <div class="o_kanban_body_row">
                                        <strong><t>Commission Value Type:</t></strong> <field name="f_commission_value_type"/>
                                    </div>
                                    <div class="o_kanban_body_row">
                                        <strong><t>Commission Value:</t></strong> <field name="f_commission_value"/>
                                    </div>
                                    <div class="o_kanban_body_row">
                                        <strong><t>Target:</t></strong> <field name="f_commission_target"/>
                                    </div>

                                    <div class="o_kanban_body_row">
                                        <strong><t>Total Amount:</t></strong> <field name="f_total_amount"/>
                                    </div>
                                    <div class="o_kanban_body_row">
                                        <strong><t>Commission Amount:</t></strong> <field name="f_commission_amount" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="f_commission_report_action" model="ir.actions.act_window">
        <field name="name">Commission Report</field>
        <field name="res_model">f.commission.report</field>
        <field name="view_mode">pivot,kanban,tree</field>
    </record>
</odoo>