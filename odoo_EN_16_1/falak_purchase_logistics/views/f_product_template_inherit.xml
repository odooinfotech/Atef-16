<odoo>
	<record id="f_product_template_customs_classifications" model="ir.ui.view">
		<field name="name">f.product.template.customs.classifications</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<field name="f_classification_access" invisible="1"/>
				<page name="f_po_class" string="PO Classifications" attrs="{'invisible': [('f_classification_access', '=', False)]}">
					<group>
						<field name="f_class_id" />
					</group>
				</page>
			</xpath>
		</field>
	</record>
</odoo>
