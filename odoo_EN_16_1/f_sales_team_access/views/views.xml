<odoo>
    <record id="f_view_partner_form_inherit" model="ir.ui.view">
        <field name="name">f.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']"
				position="attributes">
				<attribute name="domain">[]</attribute>
			</xpath>
        </field>
    </record>

	<record id="f_view_sale_order_form_inherit" model="ir.ui.view">
		<field name="name">f.view.sale.order.form.inherit</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']"
				position="attributes">
				<attribute name="domain">[]</attribute>
			</xpath>
		</field>
	</record>

    <record id="f_view_move_form_inherit" model="ir.ui.view">
        <field name="name">f.account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='invoice_user_id']"
				position="attributes">
				<attribute name="domain">[]</attribute>
			</xpath>
        </field>
    </record>

    <record id="f_view_crm_team_form_inherit" model="ir.ui.view">
        <field name="name">f.crm.team.form.inherit</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='member_ids']"
				position="attributes">
				<attribute name="domain">[]</attribute>
			</xpath>
        </field>
    </record>
</odoo>