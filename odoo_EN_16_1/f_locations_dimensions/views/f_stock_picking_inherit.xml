<odoo>
	<record id="f_view_picking_form_inherit" model="ir.ui.view">
        <field name="name">f.view.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="f_products_locations"  string="Suggest Location"
                        type="object" class="oe_highlight" groups="base.group_user" data-hotkey="x"
                        attrs="{'invisible': ['|', ('picking_type_code', '!=', 'internal'), ('state', '=', 'done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>