<odoo>

	<record id="f_view_account_move_form_line_image_inherit" model="ir.ui.view">
		<field name="name">f.view.account.move.form.line.image.inherit</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="model">account.move</field>
		<field name="arch" type="xml">

			<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
				position="after">
				<field name="f_product_image_128" widget="image"
					options="{'zoom': true, 'zoom_delay': 1000, 'size': (80, 80)}" optional="show" />
			</xpath>

			<xpath expr="//header" position="inside">
				<button string="Print Order" type="action"
						name="%(f_show_image_customs.f_invoice_report_wizard_action)d" />
			</xpath>

		</field>
	</record>

</odoo>
