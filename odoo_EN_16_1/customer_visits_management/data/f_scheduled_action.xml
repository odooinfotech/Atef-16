<odoo>
	<data>
		<record id="f_scheuled_action" model="ir.cron">
			<field name="name">Orient Visits Planning</field>
			<field name="interval_number">1</field>
			<field name="interval_type">weeks</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id"
				ref="customer_visits_management.model_f_visits"/>
			<field name="user_id" ref="base.user_root"/>
			<field name="code">model.create_visits()</field>
			<field name="state">code</field>
		</record>

		<record id="f_calculate_visits_sales" model="ir.cron">
			<field name="name">Calculate Visits Sales</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id"
				ref="customer_visits_management.model_f_visits"/>
			<field name="user_id" ref="base.user_root"/>
			<field name="code">model.get_total_sales()</field>
			<field name="state">code</field>
		</record>
	</data>
</odoo>