<odoo>
  <data>
    <record id="f_transfer_inherited_form_view" model="ir.ui.view">
            <field name="name">f.transfer.inherited.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
               <xpath expr="//div[@data-key='stock']" position="inside">
               <h2>Restriction On Transfer</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Prevent Transfer if 0 or Negative Qtys.">
                            <div class="o_setting_left_pane">
                                <field name="f_prevent_transfer" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="f_prevent_transfer"/>
                                <div class="text-muted">
                                   Prevent Transfer if 0 or Negative Products Qtys
                                </div>
                            </div>
                        </div>
                        </div>
            </xpath>
            
            </field>
        </record>
    
  </data>
</odoo>
