<odoo>
	<data>
		<record id="f_account_move_inherit_form" model="ir.ui.view">
			<field name="name">f.account.move.inherit.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
				<xpath expr="//form//sheet//group//group[1]" position="inside">
                    <field name="f_total_qty" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
                </xpath>
			</field>
		</record>
	</data>
</odoo>