<odoo>

	<record id="f_account_move_line_inherit" model="ir.ui.view">
		<field name="name">f.account.move</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
			<xpath
				expr="//sheet//notebook//page//field//field[@name='price_unit']"
				position="after">

				<field name="f_can_edit_price" invisible="1"/>
			</xpath>

			<xpath
				expr="//sheet//notebook//page//field//field[@name='price_unit']"
				position="attributes">
			<attribute name="attrs">{'readonly':[('f_can_edit_price','!=',True)]}</attribute>
			</xpath>
		</field>
	</record>
</odoo>
