<odoo>
	<openerp>
		<data>
			<!-- Add last price,product price flag in Inventory settings -->
			<record id="f_history_setting_customs" model="ir.ui.view">
				<field name="name">history.setting.prices</field>
				<field name="model">res.config.settings</field>
				<field name="inherit_id"
					ref="sale.res_config_settings_view_form" />
				<field name="arch" type="xml">
					<xpath expr="//div[@id='pricing_setting_container']" position="after">
		                
	                    <h2>Price Histroy</h2>
	                    <div class="row mt16 o_settings_container" name="price_history_setting_container">
	                        <div class="col-12 col-lg-6 o_setting_box" id="sale_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_sale_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_sale_history"/>
	                                <div class="text-muted">
	                                    Activate Price History On Sales Order Lines
	                                </div>
	                            </div>
	                        </div>
	                        
	                        <div class="col-12 col-lg-6 o_setting_box" id="purchase_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_purchase_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_purchase_history"/>
	                                <div class="text-muted">
	                                    Activate Price History On Purchase Order Lines
	                                </div>
	                            </div>
	                        </div>
	                        
	                        <div class="col-12 col-lg-6 o_setting_box" id="product_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_product_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_product_history"/>
	                                <div class="text-muted">
	                                    Activate Sale Price History On Product Views
	                                </div>
	                            </div>
	                        </div>

							<div class="col-12 col-lg-6 o_setting_box" id="product_purchase_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_product_purchase_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_product_purchase_history"/>
	                                <div class="text-muted">
	                                    Activate Purchase Price History On Product Views
	                                </div>
	                            </div>
	                        </div>
	                        
	                        <div class="col-12 col-lg-6 o_setting_box" id="invoice_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_invoice_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_invoice_history"/>
	                                <div class="text-muted">
	                                    Activate Price History On Invoice Lines
	                                </div>
	                            </div>
	                        </div>
	                        
	                        <div class="col-12 col-lg-6 o_setting_box" id="credit_note_price">
	                            <div class="o_setting_left_pane">
	                                <field name="f_credit_note_history"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="f_credit_note_history"/>
	                                <div class="text-muted">
	                                    Activate Price History On Credit Note Lines
	                                </div>
	                            </div>
	                        </div>
	                        
	                    </div>
		                    
		            </xpath>
				</field>
			</record>
		</data>
	</openerp>
</odoo>