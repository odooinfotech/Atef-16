<odoo>
	<openerp>
		<data>
			<!-- Add Restrict edit price flag in inventory settings -->
			<record id="f_mrp_setting_customs" model="ir.ui.view">
				<field name="name">mrp.setting.lacation</field>
				<field name="model">res.config.settings</field>
				<field name="inherit_id"
					ref="mrp.res_config_settings_view_form" />
				<field name="arch" type="xml">
					<xpath expr="//div//div//div[@id='mrp_lock']//div[2]"
						position="inside">
						<br/>
						<br/>
								<div class="o_setting_right_pane,o_form_label">
									<span class="o_form_label">Plan Manufacturing Location</span>
									<div class="text-muted">
										Default Location
									</div>
									<div class="text-muted">
										<field name="f_mrp_location" />
									</div>
								</div>
							
					</xpath>
				</field>
			</record>
		</data>
	</openerp>
</odoo>
