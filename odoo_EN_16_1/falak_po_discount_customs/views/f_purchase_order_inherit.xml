<odoo>
    <data>
        <record id="f_purchase_order_royal_inherit" model="ir.ui.view">
            <field name="name">f.purchase.order.royal</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_done']" position="before">
                    <button name="f_update_prices_based_on_disc"
                            type="object"
                            string="Prices based on Disc%"
                            class="btn-primary"
                    />
                </xpath>
				<xpath expr="//form//sheet//notebook//page[@name='products']//field[@name='order_line']//tree//field[@name='price_subtotal']"
                       position="after">
					<field name="f_full_price" optional="show" force_save="1" />
					<field name="f_discount" optional="show" force_save="1" />
				</xpath>
            </field>
        </record>
    </data>
</odoo>
