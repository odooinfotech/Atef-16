<odoo>
    <record id="f_pos_order_form_inherit_custom" model="ir.ui.view">
        <field name="name">f.pos.order.form.inherit.custom</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_have_partner_edit_group" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_have_partner_edit_group', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>