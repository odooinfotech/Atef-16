	<record id="view_reorder_prod_tree_register" model="ir.ui.view">
		<field name="name">product tender</field>
		<field name="model">stock.warehouse.orderpoint</field>
		<field name="arch" type="xml">
			<tree string="ReOrder Products " editable="bottom">
				<header>
					<button name="create_plan_prod" type="object"
						class="oe_highlight" string="Plan" />
				</header>


				<field name="product_id" readonly = "1"/>
				<field name="location_id" readonly = "1"/>
				<field name="product_min_qty" readonly = "1" />
				<field name="product_max_qty" readonly = "1"/>
				
				<field name="qty_on_hand" readonly = "1" />
				<field name="qty_to_order" readonly = "1"/>
				
				<field name="qty_multiple" readonly = "1"/>
				<field name="company_id" invisible="1" />
				<field name ="warehouse_id" invisible="1"/>
				
				
			</tree>
		</field>
	</record>

	<record id="action_reorder_registers"
		model="ir.actions.act_window">
		<field name="name">Minimum Quantities</field>
		<field name="res_model">stock.warehouse.orderpoint</field>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="view_reorder_prod_tree_register" />
<!-- 		<field name="context">{'default_f_mrp_plan_id':f_mrp_plan}</field> -->

	</record>

	<record id="action_min_plan_view_list"
		model="ir.actions.act_window.view">
		<field name="sequence" eval="1" />
		<field name="view_mode">tree</field>
		<field name="view_id" ref="view_reorder_prod_tree_register" />
		<field name="act_window_id" ref="action_reorder_registers" />
	</record>
