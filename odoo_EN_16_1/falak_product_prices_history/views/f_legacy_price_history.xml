<odoo>
    <data>
        <record id="f_legacy_proice_history" model="ir.ui.view">
            <field name="name">f.legacy.price.history</field>
            <field name="model">f.legacy.price.history.lines</field>
            <field name="arch" type="xml">
                <tree string="WorkCenter Group" editable="bottom">
                    <field name="product_id"/>
                    <field name="f_legacy_order_date"/>
                    <field name="f_source"/>
                    <field name="partner_id"/>
                    <field name="f_legacy_order_id"/>
                    <field name="f_price"/>
                    <field name="f_currency_id"/>
                    <field name="f_discount"/>
                    <field name="f_qty"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="f_legacy_prices_action_window">
            <field name="name">Legacy Prices</field>
            <field name="res_model">f.legacy.price.history.lines</field>

        </record>

        <menuitem name="Legacy Prices"
                  id="f_legacy_prices" parent="sale.product_menu_catalog"
                  action="falak_product_prices_history.f_legacy_prices_action_window"/>


    </data>
</odoo>