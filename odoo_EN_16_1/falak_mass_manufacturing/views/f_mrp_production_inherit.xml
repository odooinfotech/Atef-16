<odoo>
	<data>
		<record model="ir.actions.act_window" id="f_mass_planning_action_window">
			<field name="name">Mass Manufacturing</field>
			<field name="res_model">f.mass.man</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record model="ir.actions.act_window" id="f_print_mo_qty_action_window">
			<field name="name">Print Total Manufactured Quantities</field>
			<field name="res_model">f.mrp.production.report.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="type">ir.actions.act_window</field>
		</record>
		<menuitem name="Mass Manufacturing" id="f_mass_mrp" parent="mrp.mrp_planning_menu_root"
			action="falak_mass_manufacturing.f_mass_planning_action_window" />
		<menuitem name="Print Total Manufactured Quantities" id="f_print_mo_qty" parent="mrp.menu_mrp_reporting"
			action="f_print_mo_qty_action_window" />
		<record model="ir.actions.act_window" id="f_mass_products_action_window">
			<field name="name">Mass Manufacturing Products</field>
			<field name="res_model">f.mass.man.products</field>
			<field name="context">{'create':False,'edit':False}</field>
			<field name="view_mode">tree</field>
		</record>
		<menuitem name="Mass Products" id="f_mass_mrp_prod" parent="mrp.mrp_planning_menu_root"
			action="falak_mass_manufacturing.f_mass_products_action_window" />
		<!-- tree view -->
		<record id="f_mass_man_order_inherit_tree" model="ir.ui.view">
			<field name="name">f.mrp.production.tree</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_tree_view" />
			<field name="arch" type="xml">
				
				<xpath expr="//tree" position="attributes">
					<attribute name="default_order">f_actual_production_date desc</attribute>
				</xpath>
				
				<xpath expr="//tree//field[@name='product_id']" position="after">
					<field name="f_mass_man_id" />
				</xpath>
				<xpath expr="//tree//field[@name='date_planned_start']" position="after">
					<field name="f_actual_production_date" />
				</xpath>
				<xpath expr="//tree//field[@name='date_planned_start']" position="attributes">
					<attribute name="widget">False</attribute>
				</xpath>
			</field>
		</record>
		<record id="f_mass_order_inherit_form" model="ir.ui.view">
			<field name="name">f.mrp.production.form</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//form//sheet//group//group//field[@name='company_id']" position="after">
					<field name="f_mass_man_id" />
				</xpath>
				<xpath expr="//field[@name='user_id']" position="before">
					<field name="f_actual_production_date" />          
				</xpath>
			</field>
		</record>
	</data>
</odoo>